<html lang='en'>
	<head>
		{{>headerlinks}}
		
	</head>
	<body>
		{{>navbar}}
		<h1>hellow weather</h1>

			<div class="container-fluid main_header">
				<div class="row">
					<div class="col-md-10 col-12 mx-auto">
						<div class="main_container">
							<form class="temp_from">
								<input type="text" name="" id="cityName" placeholder="Enter your city Name" autocomplete="off">
								<input type="submit" value="submit" name="" id="submitBtn">
							</form>
						</div>
						<div class="tempInformation">
							<div class="top_layer">
								<p id="day">setarday</p>
								<p id="today_data">15 OCT</p>
							</div>
							<div class="main_layer">
								<p id="city_name">city</p>
								<div class="middle_layer data_hide">
									<p id="temp"><span>0</span> <sup>o</sup>C </p>
									<p id="temp_status">
										<i class="fas fa-cloud"></i>

									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		{{>footer}}

		<script src="../../public/js/main.js"></script>
			<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
			crossorigin="anonymous"
		></script>
	</body>
</html>